source 'https://rubygems.org'

# GitHub Pages gem includes Jekyll and all supported plugins
# Lock to specific GitHub Pages version for consistency
# Check current version at: https://pages.github.com/versions/
gem 'github-pages', '~> 231', group: :jekyll_plugins

# Required for Ruby 3.4+ compatibility
gem 'csv'
gem 'base64'
gem 'bigdecimal'
gem 'webrick'

# Performance booster for watching directories on Windows
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

# Lock kramdown to fix security vulnerabilities
gem 'kramdown', '>= 2.3.0'